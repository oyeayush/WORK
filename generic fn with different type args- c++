#include <iostream>
#include<conio.h>
#include<string.h>

using namespace std;

template <class t1, class t2>
float sum(t1 a, t2 b)                      //int cannot return float but float can return both
{
    return a+b;
}

int main()
{
    cout<<"integer sum ="<<sum(8, 7)<<endl;                   //calling
    cout<<"float sum ="<<sum(2.5, 7)<<endl;                   //calling
    cout<<"double sum ="<<sum(444.7, 75.2)<<endl;                   //calling

}
