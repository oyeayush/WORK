#include <stdio.h>
#include <stdlib.h>

int main()
{
    //TO FIND A NUMBER IS EVEN OR ODD//
    int a;
    printf("Enter value of a :");
    scanf("%d",&a);
    if(a%2==0)
    {
        printf("%d is an even number",a);

    }
        else
        {
            printf("%d is an odd number",a);
        }
            return 0;
}
