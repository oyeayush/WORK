#include <stdio.h>
#include <stdlib.h>

int main()
{
    char ch;
    int a,b,sum;
    do{
        printf("\nenter first number::");
        scanf("%d",&a);
        printf("\nenter second number::");
        scanf("%d",&b);
        sum=a+b;
        printf("\nsum of two numbers is:: %d",sum);
        printf("\n\ndo you again want to add numbers::");
        scanf(" %c",&ch);
    }while(ch=='y');
    return 0;
}
