#include <stdio.h>
#include <stdlib.h>
void add(int,int);
void substr(int,int);
void multiplies(int,int);
void divides(int,int);

int main()
{
     int a,b;
     printf("Enter two numbers :\n");
    scanf("%d%d",&a,&b);
    add(a,b);
    substr(a,b);
    multiplies(a,b);
    divides(a,b);
    return 0;
}

void add(int x,int y)
{
    int c;
    c=x+y;
    printf("Sum of two numbers is : %d\n",c);

}

void substr(int x,int y)
{
    int c;
    c=x-y;
    printf("Substraction of two numbers is : %d\n",c);

}

void multiplies(int x,int y)
{
    int c;
    c=x*y;
    printf("Product of two numbers is : %d\n",c);

}

void divides(int x,int y)
{
    int c;
    c=x/y;
    printf("Division of two numbers is : %d\n",c);

}


